{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentsmd.dev/schemas/rule-pack.schema.json",
  "title": "Rule Pack Schema",
  "description": "Schema for AgentsToolkit rule pack metadata",
  "type": "object",
  "required": ["id", "name", "version", "description", "files", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique identifier in kebab-case"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 2.1.0-beta)"
    },
    "description": {
      "type": "string",
      "description": "Purpose and scope of the pack"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      },
      "default": [],
      "description": "Array of pack IDs this pack requires"
    },
    "targetAgents": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": ["*"],
      "description": "Array of agent IDs or ['*'] for all agents"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+\\.md$"
      },
      "minItems": 1,
      "description": "Array of markdown files in load order"
    },
    "metadata": {
      "type": "object",
      "required": ["wordCount", "characterCount", "category"],
      "properties": {
        "wordCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Approximate word count"
        },
        "characterCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Approximate character count"
        },
        "category": {
          "type": "string",
          "enum": ["workflow", "vcs", "universal"],
          "description": "Pack category"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Searchable tags"
        }
      }
    }
  },
  "additionalProperties": false
}
